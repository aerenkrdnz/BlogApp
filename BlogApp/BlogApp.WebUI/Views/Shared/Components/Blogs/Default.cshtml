@model List<BlogViewModel>

<div class="row">

    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-4 mb-3">
                <div class="card shadow-sm" style="height:450px">
                    <div class="card-header" style="width:100%">

                        @if (!string.IsNullOrWhiteSpace(item.ImagePath))
                        {
                            <img style="width:100%; height:225px" src="~/images/blogs/@item.ImagePath" />
                        }
                        else
                        {
                            <img style="width:100%; height:225px" src="~/images/no-images.png" />
                        }
                    </div>
                    <div class="card-body">
                        <p class="card-text fw-bold">@item.Name</p>
                        <div class="d-flex justify-content-between align-items-center">
                            
                                <p class="card-text ">@item.Description</p>
                           

                        </div>
                    </div>
                </div>
            </div>
        }

    }
    else
    {
        <div class="alert alert-warning">
            Bu Kategoride ürün yok.
        </div>

    }
</div>